<div class="container">
  <div class="row">
    <div class="col-12 pt-3 pb-3">
        <% if account_signed_in? %>
          <%= link_to "sign out", destroy_account_session_path, method: :delete, class: "float-right ml-3 text-dark" %>

        <% else %>
          <%= link_to "log in", new_account_session_path, class: "float-right ml-3 text-dark" %>
          <%= link_to "sign up", new_account_registration_path, class: "float-right ml-3 text-dark" %>
        <% end %>


      <%= link_to "dashboard", "#todo", class: "float-right ml-3 text-dark" if account_signed_in? %>
      <%# <%= link_to "post", new_post_path, class: "float-right text-dark" %>

      <%# this is where "uno" or "exeter" will go %>
      <%= link_to "home", root_path, class: "" %> >

      <% if @post.present? && !@post.new_record?
        category = @post.category
        parent = category.parent
      %>
      <% if parent.present? %>
        <%= link_to parent.name, show_category_path(parent.url), class: "" %> >
      <% end %>

        <%= link_to category.name, show_category_path(category.url), class: "" %> >
        <%= @post.title %>
      <% elsif @category.present?
        parent = @category.parent
      %>
        <% if parent.present? %>
          <%= link_to parent.name, show_category_path(parent.url), class: "" %> >
        <% end %>
        <%= @category.name %>
      <% end %>
    </div>
</div>

</div>
